<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/cl1">




    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/kaishi_beijing"
        android:contentDescription="@string/backgroud_kaishi" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:contentDescription="@string/backgroud_kaishi"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/button6"
        app:layout_constraintEnd_toEndOf="@+id/cl1"
        app:layout_constraintStart_toStartOf="@+id/cl1"
        app:layout_constraintTop_toTopOf="@+id/cl1"
        app:srcCompat="@drawable/biaoti" />

    <Button
        android:id="@+id/button4"
        android:layout_width="47dp"
        android:layout_height="198dp"
        android:background="@drawable/kaishi_chouka"
        app:layout_constraintBottom_toBottomOf="@+id/button6"
        app:layout_constraintEnd_toStartOf="@+id/m_chengjiu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button6"
        android:stateListAnimator="@null"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="47dp"
        android:layout_height="198dp"
        android:background="@drawable/kaishi_guancang"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button6"
        app:layout_constraintStart_toEndOf="@+id/m_chengjiu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7"
        android:stateListAnimator="@null"
         />

    <Button
        android:id="@+id/button6"
        android:layout_width="47dp"
        android:layout_height="198dp"
        android:background="@drawable/kaishi_wode"
        app:layout_constraintBottom_toBottomOf="@+id/button5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintTop_toTopOf="@+id/button5"
        app:layout_constraintVertical_bias="0.7"
        android:stateListAnimator="@null"/>
    <Button
        android:id="@+id/m_chengjiu"
        android:layout_width="47dp"
        android:layout_height="198dp"
        android:background="@drawable/kaishi_chengjiu"
        app:layout_constraintBottom_toBottomOf="@+id/cl1"
        app:layout_constraintEnd_toStartOf="@+id/button5"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7"
        android:stateListAnimator="@null"/>

    <Button
        android:id="@+id/youxishuoming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/button6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="游戏说明"

        android:backgroundTint="@color/colorAccent"

        />



    <ProgressBar
        android:id="@+id/pb_main_download"
        style="@android:style/Widget.Holo.ProgressBar"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>